UserID: <input type="text" id="userID" /> 
pwd: <input type="text" id="pwd" />

<input type="button" value="Login" id="cmdLogin" onclick="loginUser()" />

@section Scripts 
{
    <script type="text/javascript">
        function loginUser() {
            var uid = $('#userID').val();
            var pwd = $('#pwd').val();

            var datastring = { UserID: uid, password: pwd };

            $.ajax({
                url: "CustomLoginUser",
                method: "GET",
                data: datastring
            })
                .done(function (result) {
                    alert("back");
                })
                .fail(function () {
                    alert('didnt work');
                });

        }


    </script>
}
